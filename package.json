{
  "name": "@google/clasp",
  "version": "2.5.0",
  "description": "Develop Apps Script Projects locally",
  "type": "module",
  "exports": "./build/src/index.js",
  "main": "build/src/index.js",
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "bin": {
    "clasp": "build/src/index.js"
  },
  "files": [
    "docs",
    "build/src"
  ],
  "scripts": {
    "build": "npm run compile && npm i --loglevel=error --force",
    "build-fresh": "npm cache clean --force && npm i && npm run build",
    "watch": "tsc --project tsconfig.json --watch",
    "prepare": "npm run compile",
    "lint": "npm run check",
    "test": "nyc mocha --cache false --timeout 100000 --recursive build/test",
    "coverage": "nyc --cache false report --reporter=text-lcov | coveralls",
    "prettier": "biome format src test --write",
    "check": "biome check src test",
    "clean": "rm -rf build",
    "compile": "tsc",
    "fix": "biome check src test --fix",
    "pretest": "npm run compile && npm run check",
    "clasp": "node --loader ts-node/esm --no-warnings src/index.ts"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/google/clasp"
  },
  "keywords": [
    "Apps",
    "Script",
    "SDK",
    "API",
    "script.google.com",
    "extension",
    "add-on"
  ],
  "author": "Grant Timmerman",
  "license": "Apache-2.0",
  "dependencies": {
    "@sindresorhus/is": "^7.0.1",
    "chalk": "^5.4.1",
    "chokidar": "^4.0.3",
    "cli-truncate": "^4.0.0",
    "commander": "^13.0.0",
    "debounce": "^2.2.0",
    "dotf": "^2.0.2",
    "fdir": "^6.4.3",
    "find-up": "^7.0.0",
    "fs-extra": "^11.3.0",
    "fuzzy": "^0.1.3",
    "gaxios": "^6.7.1",
    "google-auth-library": "^9.15.0",
    "googleapis": "^144.0.0",
    "googleapis-common": "7.2.0",
    "inflection": "^3.0.2",
    "inquirer": "^12.3.2",
    "inquirer-autocomplete-standalone": "^0.8.1",
    "is-reachable": "^5.2.1",
    "log-symbols": "^7.0.0",
    "loud-rejection": "^2.2.0",
    "make-dir": "^5.0.0",
    "multimatch": "^7.0.0",
    "normalize-newline": "^4.1.0",
    "normalize-path": "^3.0.0",
    "open": "^10.1.0",
    "ora": "^8.1.1",
    "p-map": "^7.0.3",
    "picomatch": "^4.0.2",
    "read-pkg-up": "^11.0.0",
    "server-destroy": "^1.0.1",
    "split-lines": "^3.0.0",
    "strip-bom": "^5.0.0",
    "typescript": "^5.7.3"
  },
  "devDependencies": {
    "@types/picomatch": "^3.0.2",
    "@biomejs/biome": "^1.9.4",
    "@commander-js/extra-typings": "^13.0.0",
    "@types/chai": "^5.0.1",
    "@types/debounce": "^1.2.4",
    "@types/fs-extra": "^11.0.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.10",
    "@types/normalize-path": "^3.0.2",
    "@types/server-destroy": "^1.0.4",
    "@types/tmp": "^0.2.6",
    "@types/wtfnode": "^0.7.3",
    "chai": "^5.1.2",
    "coveralls": "^3.1.1",
    "mocha": "^11.1.0",
    "nyc": "^17.1.0",
    "tmp": "^0.2.3",
    "ts-node": "^10.9.2",
    "type-fest": "^4.33.0"
  }
}
